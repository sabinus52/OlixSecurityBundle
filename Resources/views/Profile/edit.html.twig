{% extends 'OlixAdminBundle::layout.html.twig' %}

{% trans_default_domain 'FOSUserBundle' %}

{% block header1 %}<i class="fa fa-user"></i> {{ user.name }}{% endblock %}
{% block header2 %}Page du profil utilisateur{% endblock %}

{% block content %}

    <div class="row">

        <div class="col-sm-12">{% include 'OlixAdminBundle::include/flashbag.html.twig' %}</div>

        <div class="col-sm-12">

            <div class="olix-portlet olix-portlet-border">
                <div class="olix-portlet-header">
                    <div class="icon"><i class="fa fa-user"></i></div>
                    <div class="title">Mon profil</div>
                </div>
                <div class="olix-portlet-body">
                    <ul class="nav nav-tabs pull-right" role="tablist">
                        <li class="active"><a href="#profile" role="tab" data-toggle="tab">Mes informations</a></li>
                        <li><a href="#password" role="tab" data-toggle="tab">Changer mon mot de passe</a></li>
                    </ul>
                    <div class="clearfix"></div>
                    <div class="tab-content">
                        <div class="tab-pane active" id="profile">
                        
                            <form action="{{ path('olix_security_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal">
                                <div class="form-group">
                                    <label class="col-sm-2 control-label">{{ 'form.username'|trans }}</label>
                                    <div class="col-sm-10 "><p class="form-control-static text-primary"><b>{{ user.username }}</b></p></div>
                                </div>
                                {{ form_widget(form) }}
                                <div class="form-group">
                                    <div class="col-sm-10 col-sm-offset-2"><input type="submit" class="btn btn-primary" value="{{ 'profile.edit.submit'|trans }}" /></div>
                                </div>
                            </form>
                        
                        </div>
                        <div class="tab-pane" id="password"></div>
                    </div>
                </div>
            </div>

        </div>

    </div>

{% endblock %}
